<!DOCTYPE html>
<html>

<head>
	<% include ../static/partials/head.ejs %>
</head>

<body>
	<% include ../static/partials/navbar.ejs %>

	<main class="container">

		<% include ../static/partials/messages.ejs %>

		<h1>Topics</h1>

		<h2><%= topic.title %></h2>
		<h6><%= topic.description %></h6>

		<% if (currentUser) { %>
		<a href="/topics/<%= topic.id %>/posts/new" class="btn purple">New Post</a>
		<% if(currentUser.isAdmin()) { %>
		<a href="/topics/<%= topic.id %>/edit" class="btn-orange">Edit</a>
		<form style="display:initial" action="/topics/<%= topic.id %>/destroy" method="post">
			<button type="submit" class="btn-yellow">Delete</button>
		</form>
		<% } %>
		<% } %>

		
		<hr>

		<h3>Posts</h3>

		<ul class="list-group">
			<% topic.posts.forEach((post) => { %>
			<li class="list-group-item">
				<a href="/topics/<%= topic.id %>/posts/<%= post.id %>"> <%= post.title %> </a>
			</li>
			<% }) %>
		</ul>
	</main>

	<% include ../static/partials/baseScripts.ejs %>

</body>

</html>