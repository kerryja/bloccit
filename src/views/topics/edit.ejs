<!DOCTYPE html>
<html>

<head>
	<% include ../static/partials/head.ejs %>
</head>

<body>
	<% include ../static/partials/navbar.ejs %>

	<main class="container">

		<% include ../static/partials/messages.ejs %>

		<h1>Edit Topic</h1>

		<form action="/topics/<%= topic.id %>/update" method="post">
			<div class="form-group">
				<label for="title"><h5>Topic title</h5></label>

				<input value="<%= topic.title %>" type="text" class="form-control" name="title" aria-describedby="titleHelp"
					placeholder="Enter Title">
			</div>
			<div class="form-group">
				<label for="description"><h5>Description</h5></label>

				<textarea rows="4" class="form-control" name="description"
					placeholder="Enter Description"><%= topic.description %></textarea>
			</div>
			<button type="submit" class="btn yellow">Update</button>
		</form>
	</main>

	<% include ../static/partials/baseScripts.ejs %>

</body>

</html>